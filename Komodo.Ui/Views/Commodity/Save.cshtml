@model Komodo.Ui.ViewModels.CommoditySaveViewModel

@{
  ViewBag.Title = "Commodity Save";
}

<form asp-controller="Commodity" asp-action="Save" method="post" class="mt-3">
  <input hidden asp-for="Commodity.CommodityId"/>
  <div class="form-group row">
    <label asp-for="Commodity.CommodityCode" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="Commodity.CommodityCode" class="form-control" placeholder="Code"/>
      <span asp-for="Commodity.CommodityCode" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="Commodity.CommodityDescription" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="Commodity.CommodityDescription" class="form-control" placeholder="Commodity"/>
      <span asp-for="Commodity.CommodityDescription" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="Commodity.CommodityGroupId" clas="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="Commodity.CommodityGroupId" class="form-control"/>
    </div>
  </div>
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group row">
    <button type="submit">Save</button>
  </div>
</form>