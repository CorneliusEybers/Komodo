@model Komodo.Ui.Models.Commodity.Commodity

@{
  ViewBag.Title = "Commodity Details";
}

<div class="form-group row">
  Commodity Id : @Model.CommodityId
</div>
<div class="form-group row">
  Commodity Code : @Model.CommodityCode
</div>
<div class="form-group row">
  Commodity Description : @Model.CommodityDescription
</div>
<div class="form-group row">
  Commodity Group : @Model.CommodityGroupId
</div>
<div class="form-group row">
  <div class="table">
    <div class="row-cols-3">
      <div class="col-4">
        <a asp-controller="Commodity" asp-action="Index" class="btn btn-info">Commodities</a>
      </div>
      <div class="col-4">
        <a asp-controller="Commodity" asp-action="Update" class="btn btn-primary" asp-route-commodityId="@Model.CommodityId">Edit</a>
      </div>
      <div class="col-4">
        <a asp-controller="Commodity" asp-action="Delete" class="btn btn-danger" asp-route-commodityId="@Model.CommodityId">Delete</a>
      </div>
    </div>
  </div>
</div>