@model Komodo.Ui.Models.Commodity.CommodityGroup

@{
  ViewBag.Title = "Commodity Group Details";
}

<div class="form-group row">
  Commodity Group Id : @Model.CommodityGroupId
</div>
<div class="form-group row">
  Commodity Group Code : @Model.CommodityGroupCode
</div>
<div class="form-group row">
  Commodity Group Description : @Model.CommodityGroupDescription
</div>
<div class="form-group row">
  <div class="table">
    <div class="row-cols-3">
      <div class="col-4">
        <a asp-controller="CommodityGroup" asp-action="Index" class="btn btn-info">Groups</a>
      </div>
      <div class="col-4">
        <a asp-controller="CommodityGroup" asp-action="Update" asp-route-commodityGroupId="@Model.CommodityGroupId" class="btn btn-primary">Edit</a>
      </div>
      <div class="col-4">
        <a asp-controller="CommodityGroup" asp-action="Delete" asp-route-commodityGroupId="@Model.CommodityGroupId" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>