@model Komodo.Ui.Models.Commodity.CommodityGroup

@{
  ViewBag.Title = "Commodity Group Save";
}

<form asp-controller="CommodityGroup" asp-action="Save" method="post" class="mt-3">
  <input hidden asp-for="CommodityGroupId"/>
  <div class="form-group row">
    <label asp-for="CommodityGroupCode" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="CommodityGroupCode" class="form-control" placeholder="Code"/>
      <span asp-for="CommodityGroupCode" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="CommodityGroupDescription" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="CommodityGroupDescription" class="form-control" placeholder="Description"/>
      <span asp-for="CommodityGroupDescription" class="text-danger"></span>
    </div>
  </div>
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group row">
    <div class="table">
      <div class="row-cols-2">
        <div class="col-6">
          <a asp-controller="CommodityGroup" asp-action="Index" class="btn btn-info">Groups</a>
        </div>
        <div class="col-6">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
  </div>
</form>